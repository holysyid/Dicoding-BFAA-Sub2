
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="15dp"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_itemName_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/img_item_photo_fragment"
        app:layout_constraintTop_toTopOf="@id/img_item_photo_fragment"
        android:layout_marginBottom="3dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="Nama User" />

    <TextView
        android:id="@+id/tv_itemDetail_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Number"
        app:layout_constraintStart_toEndOf="@+id/img_item_photo_fragment"
        app:layout_constraintBottom_toBottomOf="@id/img_item_photo_fragment"
        app:layout_constraintHorizontal_bias="0.0"
        android:maxLines="1"
        android:textColor="@color/teal_700"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_itemName_fragment" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_item_photo_fragment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@android:color/black" />
    </androidx.constraintlayout.widget.ConstraintLayout>
